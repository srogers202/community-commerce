<p id="notice"><%= notice %></p>

<h1>Listing Product Expirations</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Product</th>
      <th>Expiration</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_expirations.each do |product_expiration| %>
      <tr>
        <td><%= product_expiration.shop %></td>
        <td><%= product_expiration.product %></td>
        <td><%= product_expiration.expiration %></td>
        <td><%= product_expiration.complete %></td>
        <td><%= link_to 'Show', product_expiration %></td>
        <td><%= link_to 'Edit', edit_product_expiration_path(product_expiration) %></td>
        <td><%= link_to 'Destroy', product_expiration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

